<launch>
    <node name="move_minibot_node" pkg="simulator" type="move_minibot_node" output="screen"/>

	<!-- NODE TO CONNECT JOYSTICK HARDWARE -->
	<node respawn="true" pkg="joy" type="joy_node" name="turtle_joy" >
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="deadzone" value="0.12" />
	</node>

 	<!-- NODE FOR TELEOP WITH JOYSTICK -->
	<param name="axis_linear" value="1" type="int"/>
	<param name="axis_angular" value="3" type="int"/>
	<param name="scale_linear" value="0.14" type="double"/>
	<param name="scale_angular" value="2.5" type="double"/>	
  	<node pkg="simulator" type="joy_teleop_node" name="joy_teleop_node"/>

	<!-- NODE FOR KEYBOARD TELEOP-->
	<node name="teleop_twist_keyboard" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" output="screen"/>
</launch>
